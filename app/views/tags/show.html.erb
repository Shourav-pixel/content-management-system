<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>


    <h1 align ="center"><b><%= @tag.name %></b></h1>
    <br>

    <table class="table table-light table-hover table-striped px-4">
      <thead class="table-dark">
    <tr>
      <th scope="col">Item</th>
      
      
    </tr>
  </thead>
   <% @tag.books.each do |book|%>
  <tbody>
    <tr>
      
      <td> <%= book.title %></td>
      <%# <td><%=link_to "View Book",book,class: "btn btn-primary"%></td>
      
    </tr>
    
   
  </tbody>
   <% end %>
</table>
<%if user_signed_in?%>
    <%= link_to "Edit this tag", edit_tag_path(@tag), class: "btn btn-info" %>
    <%= link_to "Back to tags", tags_path, class: "btn btn-secondary" %>
    <div class="inline-block ml-2">
      <%= button_to "Destroy this tag", @tag, method: :delete, class: "btn btn-danger" %>
      <%end%>
    </div>
  </div>
</div>
