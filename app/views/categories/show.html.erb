
<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%# <%= render @category %> 
  
   
    <div class="bg-white">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <h2 class="text-2xl font-semibold mb-4"><%= @category.name %></h2>
    <div class="grid grid-cols-1 gap-2 sm:grid-cols-2 lg:grid-cols-4 xl:grid-cols-4">
      <% @category.storages.each do |storage|%>
        <div class="border border-gray-200 rounded-md overflow-hidden">
          <%= image_tag storage.image_url, height: '50%', width: '50%', class: "w-full h-48 object-cover", alt: "#{storage.name} Image" if storage.image %>
          <div class="p-4">
            <h3 class="text-lg font-semibold text-gray-900 mb-2"><%= storage.name %></h3>
            <%= link_to "View Details", storage_path(storage), class: "text-sm font-medium text-blue-600" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  </div>

  <br>
<%if user_signed_in? && current_user.admin?%>
    <%= link_to "Edit this category", edit_category_path(@category), class: "btn btn-primary" %>
    <%= link_to "Categories", categories_path, class: "btn btn-info" %>
    <%end%>
    
    <%if user_signed_in? && current_user.admin? %>
    <div class="inline-block ml-2">
      <%= button_to "Destroy this category", @category, method: :delete, class: "btn btn-danger" %>
    </div>
    <%end%>
  </div>
</div>
