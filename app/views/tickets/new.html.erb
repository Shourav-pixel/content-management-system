<!-- app/views/tickets/new.html.erb -->

<center><b><h1>Create Ticket</h1></b></center>

<div class="container px-4">

<%= form_with(url: tickets_path, method: :post, local: true, class: 'mt-4') do |form| %>
  <div class="form-group">
    <%= form.label :summary, class: 'form-label' %>
    <%= form.text_field :summary, class: 'form-control', required: true %>
  </div>

  <div class="form-group">
    <%= form.label :description, class: 'form-label' %>
    <%= form.text_area :description, class: 'form-control', required: true %>
  </div>

  <div class="form-group">
    <%= form.label :priority, class: 'form-label' %>
    <%= form.select :priority, [['High', 'High'], ['Average', 'Average'], ['Low', 'Low']], { include_blank: true }, { class: 'form-control', required: true } %>
  </div>

  <div class="form-group">
    <%= form.label :status, class: 'form-label' %>
    <%= form.select :status, [['Opened', 'Opened'], ['In progress', 'In progress'], ['Rejected', 'Rejected'], ['Fixed', 'Fixed']], { include_blank: true }, { class: 'form-control', required: true } %>
  </div>
<br>
  <div class="form-group">
    <%= form.submit 'Submit', class: 'btn btn-primary' %>
  </div>
<% end %>
</div>

