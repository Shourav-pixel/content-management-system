<link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/habibmhamadi/multi-select-tag@3.0.1/dist/css/multi-select-tag.css">

<body class="bg-gray-100 p-6">

  <div class="max-w-3xl mx-auto bg-white p-8 rounded-lg shadow-lg">
    <%= form_with(model: book, class: "contents space-y-6") do |form| %>
      <% if book.errors.any? %>
        <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
          <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>
          <ul>
            <% book.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= form.hidden_field :user_id, value: @book.user_id %>

      <div>
        <%= form.label :title, class: "block text-gray-700 font-semibold" %>
        <%= form.text_field :title, placeholder: "Enter the book title", class: "block shadow rounded-md border border-gray-300 outline-none px-3 py-2 mt-2 w-full focus:ring focus:ring-blue-200" %>
      </div>

      <div>
        <%= form.label :category, class: "block text-gray-700 font-semibold" %>
        <%= form.select :category_id, options_for_select(@categories.collect { |cat| [cat.name, cat.id] }), {}, class: "block shadow rounded-md border border-gray-300 outline-none px-3 py-2 mt-2 w-full focus:ring focus:ring-blue-200" %>
      </div>

      <div>
        <%= form.label :tag_ids, class: "block text-gray-700 font-semibold" %>
        <%= form.collection_select :tag_ids, Tag.order(:name), :id, :name, {}, { multiple: true, id: "tag_ids_select", class: "block shadow rounded-md border border-gray-300 outline-none px-3 py-2 mt-2 w-full focus:ring focus:ring-blue-200" } %>
      </div>

      <div>
        <%= form.label :description, class: "block text-gray-700 font-semibold" %>
        <%= form.text_area :description, placeholder: "Enter the book description", rows: 4, class: "block shadow rounded-md border border-gray-300 outline-none px-3 py-2 mt-2 w-full focus:ring focus:ring-blue-200" %>
      </div>

      <div>
        <%= form.label :image, class: "block text-gray-700 font-semibold" %>
        <%= form.file_field :image, class: "block shadow rounded-md border border-gray-300 outline-none px-3 py-2 mt-2 w-full focus:ring focus:ring-blue-200" %>
      </div>

      <div>
        <%= form.label :author, class: "block text-gray-700 font-semibold" %>
        <%= form.text_field :author, placeholder: "Enter the author's name", class: "block shadow rounded-md border border-gray-300 outline-none px-3 py-2 mt-2 w-full focus:ring focus:ring-blue-200" %>
      </div>

      <div>
        <%= form.label :synopsis, class: "block text-gray-700 font-semibold" %>
        <%= form.text_area :synopsis, placeholder: "Enter the book synopsis", rows: 4, class: "block shadow rounded-md border border-gray-300 outline-none px-3 py-2 mt-2 w-full focus:ring focus:ring-blue-200" %>
      </div>

      <div>
        <%= form.label :published_on, class: "block text-gray-700 font-semibold" %>
        <%= form.date_field :published_on, class: "block shadow rounded-md border border-gray-300 outline-none px-3 py-2 mt-2 w-full focus:ring focus:ring-blue-200" %>
      </div>

      <div>
        <%= form.submit "Save Book", class: "rounded-lg py-3 px-5 bg-blue-600 text-white font-medium cursor-pointer hover:bg-blue-700 focus:ring focus:ring-blue-200" %>
      </div>
    <% end %>
  </div>
  <br>

  <!-- Load multi-select-tag JS -->
  <script src="https://cdn.jsdelivr.net/gh/habibmhamadi/multi-select-tag@3.0.1/dist/js/multi-select-tag.js"></script>
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      new MultiSelectTag('tag_ids_select'); // id of the select element
    });
  </script>