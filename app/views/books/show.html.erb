<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @book %>
<div>

  <div>

 
  <p>
<strong>Image data:</strong>
<%= image_tag @book.image_url, height: '100px', width: '100px' if @book.image %>
</p>
</div>
<div>
<strong>Tag data:</strong>
  <p>
    <small>Tags: <%= raw @book.tags.map(&:name).join(', ') %></small>
  </p>
</div>
</div>


    <%= link_to "Edit this book", edit_book_path(@book), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Back to books", books_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to "Destroy this book", @book, method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    </div>
  </div>
</div>

 </div>
